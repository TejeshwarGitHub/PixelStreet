<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/card_header"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <LinearLayout
                    android:paddingLeft="12dp"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:text="Tejeshwar Reddy"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textSize="22dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="Freelancer and Development "
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_map_marker"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:padding="2dp"
                            android:textColor="#000000"
                            android:fontFamily="sans-serif-medium"
                            android:text="Visakhapatnam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/card_header"
                android:orientation="vertical"
                android:id="@+id/card_moreinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--<LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:paddingRight="100dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_phone"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:text="Phone"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_email"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:text="Email"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />
                    </LinearLayout>
                </LinearLayout>-->
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_map_marker_multiple"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:textColor="#000000"
                            android:gravity="center"
                            android:text="Location"
                            android:fontFamily="sans-serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_map_marker_multiple"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:textColor="#000000"
                            android:gravity="center"
                            android:text="Budget"
                            android:fontFamily="sans-serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!--<ImageView-->
                        <!--android:src="@drawable/ic_format_list_bulleted_type"-->
                        <!--android:layout_width="20dp"-->
                        <!--android:layout_height="20dp" />-->
                        <TextView
                            android:gravity="center"
                            android:textColor="#000000"
                            android:paddingLeft="20dp"
                            android:text="Expertise  "
                            android:fontFamily="sans-serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.plumillonforge.android.chipview.ChipView
                            android:id="@+id/chipview"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/profile_rating_layout"
                android:layout_below="@+id/card_moreinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/profile_rating"
                    android:layout_height="20dp"
                    android:layout_width="80dp"
                    android:numStars="5"
                    android:rating="3.5"
                    android:isIndicator="true"
                    android:progressTint="@color/duskYellow"
                    android:secondaryProgressTint="@color/vpi__bright_foreground_disabled_holo_light"
                    style="?android:attr/ratingBarStyleSmall" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingLeft="20dp"
                    android:textColor="#000000"
                    android:text="Photos Clicked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/horizontal_imagescroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
